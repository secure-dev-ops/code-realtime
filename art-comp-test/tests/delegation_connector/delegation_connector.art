protocol Proto {    
    out ping();    
};

capsule Top {    
    behavior port p : Proto;

    part thePart : A;
    
    connect p with thePart.p;

    statemachine {
        state State1;
        initial -> State1
        `
            p.ping().send();
        `;
    };
};

capsule A {
    part b : B;
    connect b.p with p; // Delegation connector
    service port p~ : Proto;
    statemachine {
        state State;
        initial -> State;        
    };
};

capsule B {
    service behavior port p~ : Proto;
    statemachine {
        state State, Done;
        initial -> State;
        State -> Done on p.ping 
        `
            PASS();
        `;
    };
};
